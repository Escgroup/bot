{
  "name": "bot",
  "description": "",
  "author": "mouse_484",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec 'yarn run ts-node src/index.ts'",
    "ts-node": "ts-node --project tsconfig.json --ignore '/node_modules/!(ecstar)/' -r tsconfig-paths/register",
    "fix": "yarn fmt && yarn lint --fix",
    "fmt": "prettier --write .",
    "lint": "eslint src"
  },
  "dependencies": {
    "ecstar": "^4.2.1"
  },
  "devDependencies": {
    "@mouse_484/eslint-config-node": "https://eslint-config.mouse484.tk/Node?next",
    "@mouse_484/eslint-config-prettier": "https://eslint-config.mouse484.tk/Prettier?next",
    "@mouse_484/eslint-config-typescript": "https://eslint-config.mouse484.tk/TypeScript?next",
    "@types/node": "16.3.1",
    "eslint": "7.25.0",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "ts-node": "9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.2.4"
  }
}
